

    <%if @article.errors.any? %>
      <div class="alert alert-danger alert-dismissible" role="alert">
      <h2>The following errors prevented the article from being created <span type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></span></h2>


      <ul>
        <% @article.errors.full_messages.each do|msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>
  </div>








